<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>getbook</servlet-name>
        <servlet-class>com.servlet.getbook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getbook</servlet-name>
        <url-pattern>/book_details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>recommend_index</servlet-name>
        <servlet-class>com.servlet.recommend_index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>recommend_index</servlet-name>
        <url-pattern>/indexre</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login_bytel</servlet-name>
        <servlet-class>com.servlet.login_bytel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_bytel</servlet-name>
        <url-pattern>/login_bytel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search_book</servlet-name>
        <servlet-class>com.servlet.search_book</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search_book</servlet-name>
        <url-pattern>/search_book</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateSessionServlet</servlet-name>
        <servlet-class>com.servlet.CreateSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateSessionServlet</servlet-name>
        <url-pattern>/login/create_session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartHandler</servlet-name>
        <servlet-class>com.servlet.cartHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartHandler</servlet-name>
        <url-pattern>/cartHandler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>borrowHandler</servlet-name>
        <servlet-class>com.servlet.boReBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>borrowHandler</servlet-name>
        <url-pattern>/borrowHandler</url-pattern>
    </servlet-mapping>
</web-app>